<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mapper.EmployeeMapper">

    <select id="getTakes" resultType="com.bean.Takes" parameterType="java.lang.Long">
        select *
        from takes
        where employee_id = #{id};
    </select>

    <update id="reviseInfo" parameterType="com.bean.Employee">
        update employee
        set name = #{name},
            gender = #{gender},
            age = #{age},
            address = #{address},
            telephone = #{telephone},
            email = #{email}
        where id = #{id}
    </update>

    <select id="getEmployeeById" resultType="com.bean.Employee" parameterType="java.lang.Long">
        select *
        from employee
        where id = #{id};
    </select>

    <select id="getEmployeeByName" resultType="com.bean.Employee" parameterType="java.lang.String">
        select *
        from employee
        where name = #{name};
    </select>

    <delete id="deleteEmployee" parameterType="java.lang.Long">
        delete from employee
        where id = #{id};
    </delete>

    <select id="getCourse" resultType="com.bean.Course" parameterType="java.lang.Long">
        select *
        from
        course
        where state = 0 and course_id =
        any (select course_id
        from takes
        where employee_id = #{id});
    </select>

    <select id="getScore" resultType="com.bean.Takes" parameterType="java.lang.Long">
        select *
        from
            takes
        where employee_id = #{id};
    </select>

</mapper>