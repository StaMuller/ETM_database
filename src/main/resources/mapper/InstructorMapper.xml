<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace绑定一个mapper接口-->
<mapper namespace="com.mapper.InstructorMapper">
    <!--id对应方法名，resultType对应返回类-->

    <update id="setScore" parameterType="Map">
        update takes
        set number = #{number}
        where number is null
        and employee_id = #{employeeId}
        and course_id = #{courseId}
        order by takes.id desc limit 1;
    </update>

    <select id="getAllInstructor" resultType="com.bean.Instructor">
        select *
        from instructor;
    </select>

    <select id="getInstructorById" resultType="com.bean.Instructor" parameterType="com.bean.Instructor">
        select *
        from instructor
        where id = #{id};
    </select>

    <select id="getInstructedEmployee" resultType="java.lang.Long" parameterType="java.lang.Long">
        select distinct employee_id
        from takes
        where course_id in(
            select course_id
            from course
            where instructor_id = #{id}
        );
    </select>

    <delete id="deleteInstructor" parameterType="java.lang.Long">
        delete from instructor
        where id = #{id};
    </delete>

</mapper>