<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace绑定一个mapper接口-->
<mapper namespace="com.mapper.InstructorMapper">
    <!--id对应方法名，resultType对应返回类-->

    <select id="getAllInstructor" resultType="com.bean.Instructor">
        select * from instructor;
    </select>

    <select id="getInstructorById" resultType="com.bean.Instructor" parameterType="java.lang.Long">
        select
               *
        from
             instructor
        where
              id = #{id};
    </select>

    <delete id="deleteInstructor" parameterType="java.lang.Long">
        delete from instructor
        where id = #{id};
    </delete>

</mapper>