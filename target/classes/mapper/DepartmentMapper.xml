<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mapper.DepartmentMapper">

    <select id="getNameById" resultType="java.lang.String" parameterType="int">
        select dept_name
        from department
        where dept_id = #{deptId};
    </select>

    <select id="getDeptIdByName" resultType="int" parameterType="java.lang.String">
        select dept_id
        from department
        where dept_name = #{deptName};
    </select>

</mapper>